{
  "name": "wattbox-api",
  "displayName": "WattBox API",
  "version": "0.3.0",
  "description": "An unofficial Node.JS client library for the WattBox Integration Protocol API.",
  "keywords": [
    "wattbox"
  ],
  "homepage": "https://github.com/michaelahern/wattbox-api",
  "bugs": {
    "url": "http://github.com/michaelahern/wattbox-api/issues"
  },
  "license": "ISC",
  "author": "Michael Ahern <michael.ahern@gmail.com>",
  "files": [
    "lib"
  ],
  "type": "module",
  "exports": {
    ".": {
      "default": "./lib/module.js",
      "types": "./lib/module.d.ts"
    }
  },
  "main": "./lib/module.js",
  "types": "./lib/module.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/michaelahern/wattbox-api.git"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "clean": "rimraf ./lib",
    "docs": "typedoc",
    "example": "npm run build && node ./lib/example.js",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "lint-fix": "eslint src/**/*.ts --max-warnings=0 --fix",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4",
    "@types/node": "^20",
    "eslint": "^9",
    "rimraf": "^6",
    "typedoc": "~0.28",
    "typescript": "~5.8",
    "typescript-eslint": "^8"
  },
  "engines": {
    "node": ">=20"
  }
}
